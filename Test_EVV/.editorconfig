# top-most EditorConfig file
root = true

[*.cs]

# Приватные поля camelCase без префикса "_"
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.camel_case_style.capitalization = camel_case
dotnet_naming_style.camel_case_style.required_prefix =

dotnet_naming_rule.private_fields_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_camel_case.style = camel_case_style
dotnet_naming_rule.private_fields_should_be_camel_case.severity = warning

# Приватные сериализованные поля camelCase без префикса "_"
dotnet_naming_symbols.private_serialized_fields.applicable_kinds = field
dotnet_naming_symbols.private_serialized_fields.applicable_accessibilities = private
#dotnet_naming_symbols.private_serialized_fields.required_attributes = SerializeField

dotnet_naming_style.camel_case_no_prefix.capitalization = camel_case
dotnet_naming_style.camel_case_no_prefix.required_prefix =

dotnet_naming_rule.private_serialized_fields_should_be_camel_case.symbols = private_serialized_fields
dotnet_naming_rule.private_serialized_fields_should_be_camel_case.style = camel_case_no_prefix
dotnet_naming_rule.private_serialized_fields_should_be_camel_case.severity = warning

# Публичные поля — PascalCase
dotnet_naming_symbols.public_fields.applicable_kinds = field
dotnet_naming_symbols.public_fields.applicable_accessibilities = public

dotnet_naming_style.pascal_case_style.capitalization = pascal_case
dotnet_naming_style.pascal_case_style.required_prefix =

dotnet_naming_rule.public_fields_should_be_pascal_case.symbols = public_fields
dotnet_naming_rule.public_fields_should_be_pascal_case.style = pascal_case_style
dotnet_naming_rule.public_fields_should_be_pascal_case.severity = warning

# 2. Запретить использование var во всех случаях
#dotnet_diagnostic.IDE0007.severity = error

# 3. Пробелы внутри круглых скобок запрещены
csharp_space_between_parentheses = none
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false
#csharp_space_between_type_cast_parentheses = false
#csharp_space_between_default_expression_parentheses = false
#csharp_space_between_checked_expression_parentheses = false
#csharp_space_between_sizeof_expression_parentheses = false
#csharp_space_between_empty_method_declaration_parentheses = false
#csharp_space_between_empty_method_call_parentheses = false
#csharp_space_between_statement_parentheses = false

# 4. Снаружи круглых скобок пробелы запрещены
#csharp_space_after_method_declaration_name = false
#csharp_space_before_parentheses = false

# 5. Все свойства (public/private/protected) в PascalCase без ворнингов
dotnet_naming_symbols.all_properties.applicable_kinds = property
dotnet_naming_symbols.all_properties.applicable_accessibilities = public, private, protected

#dotnet_naming_style.pascal_case_style.capitalization = pascal_case

dotnet_naming_rule.all_properties_no_warning.symbols = all_properties
dotnet_naming_rule.all_properties_no_warning.style = pascal_case_style
dotnet_naming_rule.all_properties_no_warning.severity = silent

# 6. Варнинги за пробелы (если поддерживается IDE0011 или аналог)
#dotnet_diagnostic.IDE0011.severity = warning
#dotnet_style_parentheses_spacing_when_no_spaces.severity = warning
